<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.widget.LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="27dp" />


    <EditText
        android:id="@+id/editText_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="109dp"

        tools:layout_editor_absoluteY="16dp"
        tools:targetApi="o" />

        <Button
            android:id="@+id/button_srch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_name"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="301dp" />

    </android.widget.LinearLayout>


    <android.widget.LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mob"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="104dp" />


    <EditText
        android:id="@+id/editText_Mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="92dp"
        tools:targetApi="o" />
        <Button
            android:id="@+id/button_srch_mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_mob"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="301dp" />


    </android.widget.LinearLayout>



    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:orientation="horizontal">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/Det"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="184dp" />


    <EditText
        android:id="@+id/editText_Det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="171dp"
        tools:targetApi="o" />
                                    </android.widget.LinearLayout>


    <android.widget.LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apdate"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="301dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/ID"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="184dp" />


    <EditText
        android:id="@+id/editText_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="171dp"
        tools:targetApi="o" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="301dp" />

                                   </android.widget.LinearLayout>
    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="301dp" />

    <Button
        android:id="@+id/button_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="301dp" />





















</android.widget.LinearLayout>
